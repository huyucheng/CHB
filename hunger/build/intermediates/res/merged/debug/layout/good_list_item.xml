<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">
    <ImageView
        android:id="@+id/iv_goods_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_food_default"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/ll_goods_detail"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:text="铁板牛排"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_tip_default" />
        <TextView
            android:id="@+id/tv_goods_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:background="@drawable/store_comment_star" />
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="￥18"
            android:textColor="@color/food_price"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ib_select_delete"
        android:layout_width="20dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/takeout_bg_btn_reduce_pressed"/>
    <ImageView
        android:id="@+id/ib_select_add"
        android:layout_width="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_add_food"/>
</LinearLayout><!-- From: file:/G:/Resource/SEUProject/project/CHBhycHU/CHB/hunger/src/main/res/layout/good_list_item.xml -->