<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout style="@style/TitleLinearlayoutStyle">

        <ImageView
            android:id="@+id/iv_password_reset"
            style="@style/TitleImageviewStyle"
            android:clickable="true"
            android:onClick="iv_password_reset"/>

        <TextView
            android:id="@+id/tv_password_reset"
            style="@style/TitleTextviewStyle"
            android:text="重置密码" />
    </LinearLayout>

    <TextView style="@style/TextviewShadowStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/et_account_password_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="手机/邮箱"
            android:background="@null"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_tip_default" />
        <TextView
            style="@style/TextviewLineStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_identifying_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:hint="验证码"
                android:background="@null"
                android:maxLength="4"
                android:textSize="@dimen/text_size_tip_default" />

            <ImageView
                android:id="@+id/iv_identifying_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="2"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看不清？"
                    android:textColor="#a000" />

                <TextView
                    android:id="@+id/tv_change_identifying_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_other"
                    android:textColor="@color/normal_orange" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            style="@style/TextviewLineStyle"/>

    </LinearLayout>

    <TextView style="@style/TextviewShadowStyle" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:onClick="btn_next_step"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/button_size" />
    <!--android:background="@drawable/next_step_password_reset"-->
</LinearLayout>
