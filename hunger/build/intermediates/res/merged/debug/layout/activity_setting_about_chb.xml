<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TitleLinearlayoutStyle">

        <ImageView
            android:id="@+id/iv_address_forward"
            style="@style/TitleImageviewStyle"/>

        <TextView
            style="@style/TitleTextviewStyle"
            android:text="关于吃货宝" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_setting_about_chb"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_chb" />
        <TextView
            android:id="@+id/tv_proverb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吃货,当然要找吃货宝"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/splash_bg"
            android:textStyle="bold|italic"
            android:layout_below="@+id/iv_setting_about_chb"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_versionCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="version: 1.0"
            android:textSize="@dimen/text_size_tip_default"
            android:layout_below="@+id/tv_proverb"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_checkVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="检查更新"
            android:textSize="@dimen/text_size_tip_default"
            android:textColor="#a000"
            android:layout_below="@+id/tv_versionCode"
            android:layout_marginTop="60dp" />
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎页"
            android:textSize="@dimen/text_size_tip_default"
            android:textColor="#a000"
            android:clickable="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/tv_checkVersion"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:text="用户服务协议"
            android:textSize="14sp"
            android:textColor="#a1000000"
            android:layout_below="@id/tv_welcome"/>
        <TextView
            android:id="@+id/tv_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="东南大学育成有限公司"
            android:textSize="14sp"
            android:textColor="#a1000000"
            android:layout_below="@id/tv_message"/>
        <ProgressBar
            android:id="@+id/progress_dowload_setting"
            style="@style/ProgressBar_Mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout><!-- From: file:/G:/Resource/SEUProject/project/CHBhycHU/CHB/hunger/src/main/res/layout/activity_setting_about_chb.xml -->