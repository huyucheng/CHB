<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TitleLinearlayoutStyle">

        <ImageView
            android:id="@+id/iv_address_forward"
            style="@style/TitleImageviewStyle"/>

        <TextView
            style="@style/TitleTextviewStyle"
            android:text="收货地址"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_addAddressSuccess"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_address_tips"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_no_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/no_address"
            android:layout_marginTop="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_no_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_no_address"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:text="没有收货地址"
            android:textColor="#a000"
            android:textSize="@dimen/title_text_size"/>
        <TextView
            android:id="@+id/tv_click_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_no_address"
            android:layout_centerHorizontal="true"
            android:text="点击下方按钮新增"
            android:textSize="15sp"
            android:textColor="#500000"
            android:paddingTop="10dp"/>
    </RelativeLayout>
    <TextView
        style="@style/TextviewLineStyle"/>
    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_bg_press_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="⊕  新增地址"
        android:textColor="@color/normal_orange"
        android:textSize="@dimen/title_text_size"/>

</LinearLayout>

